@using Microsoft.AspNetCore.Identity
@using website_shopping.Models

@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager

<style>
    #nav-link {
        color: #ffffff;
    }
</style>
@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Cart">Giỏ hàng</a>

    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"
        class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Manage"
                    title="Manage">Xin chào
                    @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Logout">Đăng
                    xuất</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light">/</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-controller="Account" asp-action="Register">Đăng
                ký</a>
        </li>
    </ul>
}