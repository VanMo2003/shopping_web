@using website_shopping.Models.Contexts
@inject ShopContext ShopContext

@{
    Layout = "_Layout";
}
<div style="min-height: 60vh;" class="mb-3">
    <div>
        <div class="row">
            <div class="col-3">
                <a class="list-group-item active bg-info fw-bold">
                    Danh mục
                </a>
                @foreach (var item in ShopContext.Categories)
                {
                    <a class="list-group-item list-group-item-action list-group-item-primary">
                        @item.Name
                    </a>
                }
            </div>
            <div class="col-9">@RenderBody()</div>
        </div>
        <div class="my-5">
            <img width="100%" src="https://cmon.vn/wp-content/uploads/2022/07/banner.webp"
                class="attachment-original size-original" alt="" />
        </div>
        <div class="row mt-3">
            @foreach (var pro in ShopContext.Products)
            {
                <div class="card mx-2 mb-3" style="width: 23.8%;">
                    <a asp-asp-area="" asp-controller="Home" asp-action="DetailProduct" asp-route-id="@pro.Id">
                        <img class="card-img-top mt-3" src="/uploads/products/@pro.ImageString" alt="Không tìm thấy ảnh">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@pro.Name</h5>
                        <p class="card-text">@pro.Description</p>
                        <a class="btn btn-info text-light" asp-asp-area="" asp-controller="Home" asp-action="DetailProduct"
                            asp-route-id="@pro.Id">Xem chi tiết</a>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
