@model website_shopping.Controllers.UserController

@{
    ViewData["Title"] = "Đăng nhập";
}

<div id="wrapper">
    <div id="container">
        <div class="row justify-content-around">
            <form method="post" class="col-md-4 bg-light p-3 my-3 justify-content-button">
                <h1 class="text-center text-uppercase h3 py-3">Đăng Nhập</h1>
                <div class="form-group mb-3">
                    <label asp-for="@Model.UserModel.Username"></label>
                    <input class="form-control" asp-for="@Model.UserModel.Username">
                    <span class="text-danger" asp-validation-for="@Model.UserModel.Username"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.UserModel.Password"></label>
                    <input class="form-control" asp-for="@Model.UserModel.Password" type="password">
                    <span class="text-danger" asp-validation-for="@Model.UserModel.Password"></span>
                </div>
                <div class="d-grid grap-1">
                    <input type="submit" value="Đăng nhập" class="btn btn-info mt-3 text-light">
                </div>
            </form>

        </div>
    </div>
    <form action=""></form>
</div>