@model IEnumerable<website_shopping.Models.CategoryModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lý danh mục</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm danh mục mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCreate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeUpdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="27%">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td width="27%">
                    @Html.DisplayFor(modelItem => item.TimeCreate)
                </td>
                <td width="27%">
                    @Html.DisplayFor(modelItem => item.TimeUpdate)
                </td>
                <td width="19%">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Xem</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
