@model website_shopping.Models.CategoryModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="alert alert-danger">Bạn có đồng ý xóa danh mục này?</h1>

<div>
    <h2>Chi tiết danh mục</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeCreate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeUpdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeUpdate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger mb-3" />
        <br>
        <a asp-action="Index">Danh sách danh mục</a>
    </form>
</div>
