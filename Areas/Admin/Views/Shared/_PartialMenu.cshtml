@{
    Layout = "_Layout";
}

<div class="row mx-1">
    <div class="pt-3 col-2 bg-dark" style="min-height: 90vh;">
        <a class=" list-group-item active bg-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">
            MENU
        </a>
        <a class="list-group-item list-group-item-action list-group-item-primary bg-dark text-light" asp-area="Admin"
            asp-controller="Product" asp-action="Index">
            Quản lý sản phẩm
        </a>
        <a class="list-group-item list-group-item-action list-group-item-primary bg-dark text-light" asp-area="Admin"
            asp-controller="Category" asp-action="Index">
            Quản lý danh mục
        </a>
        <a class="list-group-item list-group-item-action list-group-item-primary bg-dark text-light" asp-area="Admin"
            asp-controller="User" asp-action="Index">
            Quản lý người dùng
        </a>
        <a class="list-group-item list-group-item-action list-group-item-primary bg-dark text-light" asp-area="Admin"
            asp-controller="Order" asp-action="Index">
            Quản lý đơn hàng
        </a>
        <a class="list-group-item list-group-item-action list-group-item-primary bg-dark text-light" asp-area="Admin"
            asp-controller="Statistical" asp-action="Index">
            Thống kê
        </a>
    </div>
    <div class="col-10">@RenderBody()</div>
</div>
