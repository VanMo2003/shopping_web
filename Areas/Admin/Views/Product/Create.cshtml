@model website_shopping.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-group {
        margin-bottom: 16px;
    }

    .control-label {
        margin-bottom: 5px;
    }
</style>
<h1>Thêm mới</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5" style="resize: none;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_category" class="control-label"></label>
                <select asp-for="id_category" class="form-control" asp-items="ViewBag.id_category"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Chọn ảnh :</label>
                <input type="file" name="file" class="form-control" />
                @if (ViewData["Image"] != null)
                {
                    <div class="text-danger">@ViewData["Image"]</div>
                }
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
        @* <div asp-validation-summary="All"></div> *@
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách sản phẩm</a>
</div>
